{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2018",
    "lib": ["esnext", "dom", "dom.iterable"],
    "declaration": true,
    "declarationDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "$components": ["src/components"],
      "$components/*": ["src/components/*"],
      "$stores": ["src/stores"],
      "$stores/*": ["src/stores/*"],
      "$typings": ["src/typings"],
      "$typings/*": ["src/typings/*"],
      "$utils": ["src/utils"],
      "$utils/*": ["src/utils/*"]
    },
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
